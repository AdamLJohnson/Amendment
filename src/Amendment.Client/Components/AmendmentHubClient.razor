@using Microsoft.AspNetCore.SignalR.Client
@using Amendment.Shared.Responses
@using Amendment.Client.Repository
@using Amendment.Client.AuthProviders
@using Amendment.Client.Services
@inject IAmendmentHubCommandService AmendmentHubCommandService
@implements IDisposable

@code {
    
    protected override Task OnInitializedAsync()
    {
        return AmendmentHubCommandService.Connect();
    }

    public void Dispose()
    {
        AmendmentHubCommandService.Disconnect();
    }

}
