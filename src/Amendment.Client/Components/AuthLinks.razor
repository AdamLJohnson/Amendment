<BarItem TextColor="TextColor.Light">
    <AuthorizeView>
        <Authorized>
            Hello, @context.User.Identity!.Name!
            <Link To="/Logout" Class="btn btn-secondary">Log out</Link>
        </Authorized>
        <NotAuthorized>
            <Link To="/Login" Class="btn btn-primary">Log in</Link>
        </NotAuthorized>
    </AuthorizeView>
</BarItem>