<BarItem TextColor="TextColor.Light">
    <AuthorizeView>
        <Authorized>
            <Link To="/change-password" style="text-decoration: none; color: white;">Hello, @context.User.Identity!.Name!</Link>            
            <Link To="/Logout" Class="btn btn-secondary">Log out</Link>
        </Authorized>
        <NotAuthorized>
            <Link To="/Login" Class="btn btn-primary">Log in</Link>
        </NotAuthorized>
    </AuthorizeView>
</BarItem>