@using Amendment.Shared
<BarBrand>
    Amendments
</BarBrand>
<BarToggler />
<BarMenu>
    <BarStart>
        <BarItem>
            <BarLink To="/">Home</BarLink>
        </BarItem>
        <BarItem>
            <BarDropdown>
                <BarDropdownToggle>View Amendments</BarDropdownToggle>
                <BarDropdownMenu>
                    <BarDropdownItem>
                        <BarLink To="/View/English" TextColor="TextColor.Dark">English</BarLink>
                    </BarDropdownItem>
                    <BarDropdownItem>
                        <BarLink To="/View/Spanish" TextColor="TextColor.Dark">Spanish</BarLink>
                    </BarDropdownItem>
                    <BarDropdownItem>
                        <BarLink To="/View/French" TextColor="TextColor.Dark">French</BarLink>
                    </BarDropdownItem>
                    <AuthorizeView>
                        <Authorized>
                            <BarDropdownItem>
                                <BarLink To="/Timer" TextColor="TextColor.Dark">Timer</BarLink>
                            </BarDropdownItem>
                        </Authorized>
                    </AuthorizeView>
                </BarDropdownMenu>
            </BarDropdown>
        </BarItem>
        <AuthorizeView>
            <Authorized>
                <BarItem>
                    <BarLink To="/Amendment">
                        Amendments
                    </BarLink>
                </BarItem>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="@RoleGroups.AdminScreenController">
            <Authorized>
                <BarItem>
                    <BarLink To="/Timer/Control">
                        Timer Control
                    </BarLink>
                </BarItem>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="@RoleGroups.Admin">
            <Authorized>
                <BarItem>
                    <BarDropdown Background="Background.Light">
                        <BarDropdownToggle>Admin</BarDropdownToggle>
                        <BarDropdownMenu>
                            <BarDropdownItem>
                                <BarLink To="/Admin/User" TextColor="TextColor.Dark">
                                    Users
                                </BarLink>
                            </BarDropdownItem>
                            <BarDropdownItem>
                                <BarLink To="/Admin/SystemSetting" TextColor="TextColor.Dark">System Settings</BarLink>
                            </BarDropdownItem>
                        </BarDropdownMenu>
                    </BarDropdown>
                </BarItem>
            </Authorized>
        </AuthorizeView>
    </BarStart>
    <BarEnd>
        <AuthLinks />
    </BarEnd>
</BarMenu>