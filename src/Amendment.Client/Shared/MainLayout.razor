@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Fixed>
        <Bar Breakpoint="Breakpoint.Desktop"
             Background="Background.Dark"
             ThemeContrast="ThemeContrast.Dark"
             >
            <div class="container">
                <BarBrand>
                    Amendments
                </BarBrand>
                <BarToggler />
                <BarMenu>
                    <BarStart>
                        <BarItem>
                            <BarLink To="/">Home</BarLink>
                        </BarItem>

                        <AuthorizeView>
                            <Authorized>
                                <BarItem>
                                    <BarDropdown>
                                        <BarDropdownToggle>View Amendments</BarDropdownToggle>
                                        <BarDropdownMenu>
                                            <BarDropdownItem>
                                                <BarLink To="/" TextColor="TextColor.Dark">English</BarLink>
                                            </BarDropdownItem>
                                            <BarDropdownItem>
                                                <BarLink To="/" TextColor="TextColor.Dark">Spanish</BarLink>
                                            </BarDropdownItem>
                                            <BarDropdownItem>
                                                <BarLink To="/" TextColor="TextColor.Dark">French</BarLink>
                                            </BarDropdownItem>
                                        </BarDropdownMenu>
                                    </BarDropdown>
                                </BarItem>
                                <BarItem>
                                    <BarLink To="/Amendment">
                                        Amendments
                                    </BarLink>
                                </BarItem>
                                <BarItem>
                                    <BarDropdown Background="Background.Light">
                                        <BarDropdownToggle>Admin</BarDropdownToggle>
                                        <BarDropdownMenu>
                                            <BarDropdownItem>
                                                <BarLink To="/Admin/User" TextColor="TextColor.Dark">
                                                    Users
                                                </BarLink>
                                            </BarDropdownItem>
                                            <BarDropdownItem>
                                                <BarLink To="/Admin/SystemSetting" TextColor="TextColor.Dark">System Settings</BarLink>
                                            </BarDropdownItem>
                                        </BarDropdownMenu>
                                    </BarDropdown>
                                </BarItem>
                            </Authorized>
                        </AuthorizeView>
                    </BarStart>
                    <BarEnd>
                        <BarItem>
                            <AuthLinks />
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </div>

        </Bar>
    </LayoutHeader>
    <LayoutContent style="margin-top: 70px">
        <main>
            <div class="container">
                @Body
            </div>
        </main>
    </LayoutContent>
    <LayoutFooter>
        <div class="container">
            Footer
        </div>
    </LayoutFooter>
</Layout>