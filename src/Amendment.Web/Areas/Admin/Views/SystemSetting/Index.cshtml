@model List<Amendment.Model.DataModel.SystemSetting>

@{
    ViewBag.Title = "System Settings";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div id="viewModel">
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
            <th></th>
        </tr>
        </thead>
        <tbody data-bind="foreach: settings">
        <tr>
            <td data-bind="text: key"></td>
            <td>
                <input type="text" data-bind="value: value" class="form-control" />
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-bind="click: $parent.saveSetting">Save</button>
            </td>
        </tr>
        </tbody>
    </table>
</div>


@section Scripts
{
    <script>
        var initialData = @Json.Serialize(Model);
    </script>

    <environment include="Development">
        <script src="~/js/systemSettingsEdit.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/systemSettingsEdit.min.js" asp-append-version="true"></script>
    </environment>
}